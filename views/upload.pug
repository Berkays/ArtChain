extends layout

block styles

block content
    div.body-push
    .row.justify-content-md-center.my-5
        form.col-4.border.border-1.bg-white.rounded.p-4.shadow
            .form-group
                p.h4.text-center Upload new Artwork
                hr
                label(for='artName') Artwork Name:
                input#artName.form-control(type='text' placeholder='Artwork Name')
            .form-group
                label(for='artDesc') Description:
                textarea#artDesc.form-control()
            .form-group
                label(for='artAuthor') Author:
                input#artAuthor.form-control(type='text' placeholder='Author')
            .form-group
                label(for='artFile') Image:
                .custom-file
                    label#artFileLabel.custom-file-label(for='artFile') Choose file
                    input#artFile.custom-file-input(type='file' accept="image/*" onchange="preview(event)")
            .form-group.text-center
                label(for='artPreview') Preview:
                img#artPreview.d-block.w-100(src="/images/uploads/img1.jpg", alt="")
            button#submitArtwork.btn.btn-primary(type='button') Submit Artwork

block scripts
    script(src="./scripts/upload.js")